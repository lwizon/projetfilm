<Window x:Class="ProjetFilmv1.MovieDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DÃ©tails du film" Height="600" Width="900" WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Background="White">
        <Border Padding="12" Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="PosterImage" Width="300" Height="450" Stretch="UniformToFill" Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="TitleText" FontSize="24" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="VoteText" Margin="0,6,0,12"/>
                    <ScrollViewer Height="360" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="OverviewText" TextWrapping="Wrap"/>
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button x:Name="CloseButton" Content="Fermer" Width="90" Click="CloseButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
