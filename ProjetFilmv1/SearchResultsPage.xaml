<Page x:Class="ProjetFilmv1.SearchResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RÃ©sultats de recherche">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="QueryText" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />

        <ListView x:Name="ResultsList" Grid.Row="1" Margin="0,8,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" BorderBrush="#DDD" BorderThickness="0,0,0,1">
                        <DockPanel>
                            <Image Width="80" Height="120" Source="{Binding PosterFullPath}" Stretch="UniformToFill" Margin="0,0,8,0" />
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" />
                                <TextBlock Text="{Binding Overview}" TextWrapping="Wrap" MaxHeight="60" Foreground="Gray" FontSize="12" />
                                <TextBlock Text="{Binding VoteAverage, StringFormat=Note : {0:N1}}" Foreground="#555" FontSize="12" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="NoResultsText" Foreground="Gray" Visibility="Collapsed" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Page>
