<Window x:Class="ProfileApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profil" Height="700" Width="1100" Background="White">
    <Window.Resources>
        <Style x:Key="FlatButton" TargetType="Button">
            </Style>
    </Window.Resources>


    <Grid>
        <TextBlock Text="Profil"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,5,0,0" />

        <Grid x:Name="HeaderImg" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Image Source="/gestion profile/img/photoprofile.jpg"
                   Width="80" Height="80"
                   Stretch="UniformToFill"/>
        </Grid>


        <Border x:Name="MainBorder" Background="White" CornerRadius="8" Margin="40" VerticalAlignment="Center" Height="430">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Nom_Utilisateur" FontSize="20" FontWeight="Bold" Margin="0,12,0,0"/>
                    <Button Content="Mon profil" Width="140" Background="Black" Foreground="White" Margin="0,12,0,0" Padding="8,2" 
                            Click="OpenProfileDetails"/>
                </StackPanel>

                <StackPanel x:Name="MenuStackPanel" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
                    <Button Content="⚙ Paramètres" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="⋯ Plus d'options" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="📝 Mes critiques" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="★ Mes notes" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="♡ Mes favoris" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="🏆 Mon Top 10" Style="{StaticResource FlatButton}" Margin="0,3"/>
                    <Button Content="⎋ Se déconnecter" Style="{StaticResource FlatButton}" Margin="0,3"/>
                </StackPanel>

                <Frame x:Name="MainFrame"
                       Grid.Row="0" Grid.RowSpan="2"  Visibility="Collapsed" 
                       NavigationUIVisibility="Hidden"
                       Background="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>